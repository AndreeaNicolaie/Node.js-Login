<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8d7da; /* Roz deschis pentru fundal */
        }

        .container {
            background-color: #fff; /* Fundal alb pentru container */
            border-radius: 10px; /* Margini rotunjite */
            padding: 20px; /* Spațierea din interiorul containerului */
            margin-top: 50px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Umbră pentru un aspect tridimensional */
        }

        h1 {
            color:  #eb1cf3; /* Culoare de accent pentru titlu */
        }

        form {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        label {
            color:  #eb1cf3; /* Culoare de accent pentru etichete */
        }

        button {
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            background-color: purple;
        }

        button:hover {
            background-color:  #eb1cf3; /* Culoare mai închisă la survol */
        }

        p {
            margin-top: 20px;
            color: #6c757d; /* Culoare mai închisă pentru text secundar */
        }

        a {
            color:  #eb1cf3; /* Culoare de accent pentru link-uri */
        }

        a:hover {
            color:  #eb1cf3; /* Culoare mai închisă la survol */
        }
    </style>
</head>

<body class="container">

    <h1>Register</h1>

    <% if (typeof error !=='undefined' ) { %>
    <p style="color:  #eb1cf3;">
        <%= error %>
    </p>
    <% } %>

    <form action="/register" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="username" required class="form-control">
        <br>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" required class="form-control">
        <br>
        <button type="submit" class="btn btn-primary">Register</button>
    </form>
    
    <!-- Adăugăm un script pentru a valida parola înainte de a trimite formularul -->
    <script>
        function validatePassword() {
            var password = document.getElementById('password').value;

            // Verificăm condițiile pentru parolă
            if (password.length < 6 || !/\d/.test(password)) {
                // Afișăm mesajul de eroare
                document.getElementById('password-error').innerText = 'Password must be at least 6 characters long and contain at least one digit.';
                // Împiedicăm trimiterea formularului
                return false;
            }

            // Ștergem mesajul de eroare dacă parola este validă
            document.getElementById('password-error').innerText = '';
            // Permite trimiterea formularului
            return true;
        }
    </script>
</body>

</html>
